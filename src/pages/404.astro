---
import Layout from '../layouts/Layout.astro';
import MobileMenu from '../components/MobileMenu.astro';
---

<Layout>
  <MobileMenu />
  <div class="flex flex-col items-center justify-center h-screen bg-emerald-950">
    <h1 class="text-4xl text-center font-bold mb-4 text-white">404 - Página no encontrada</h1>
    <p class="text-lg text-center text-white">La página que estás buscando no existe o ha sido movida.</p>
    <a href="/" class="mt-4 px-6 py-3 bg-emerald-600 hover:bg-emerald-700 text-white text-center rounded-full font-medium transition-colors">Volver al inicio</a>
  </div>
</Layout>
