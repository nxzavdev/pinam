<header id="header-container" class="fixed top-0 px-2 z-50 w-full border-b-2 border-neutral-200/20 bg-transparent backdrop-blur-xs shadow-md transition-all duration-500">
  <div class="container mx-auto w-full px-2 py-2 lg:px-4 lg:py-6">
    <div class="grid grid-cols-[1fr_2fr_1fr] items-center">
      <!-- Logo - left aligned -->
      <div class="flex-shrink-0">
        <a href="/" class="text-effect text-xl lg:text-3xl header-text">
          PIYALI
        </a>
      </div>
      <!-- Navigation - centered -->
      <nav class="hidden md:flex justify-center">
        <ul class="flex space-x-8">
          <li class="relative group">
            <a href="/" class="text-white hover:text-green-600 transition-all duration-300 header-text relative group-hover:scale-105">
              Inicio
              <span class="absolute bottom-[-4px] left-0 w-0 h-0.5 bg-green-600 transition-all duration-300 group-hover:w-full"></span>
            </a>
          </li>
          <li class="relative group">
            <a href="/nosotros" class="text-white hover:text-green-600 transition-all duration-300 header-text relative group-hover:scale-105">
              ¿Quiénes Somos?
              <span class="absolute bottom-[-4px] left-0 w-0 h-0.5 bg-green-600 transition-all duration-300 group-hover:w-full"></span>
            </a>
          </li>
          <li class="relative group">
            <a href="/servicios" class="text-white hover:text-green-600 transition-all duration-300 header-text relative group-hover:scale-105">
              Servicios
              <span class="absolute bottom-[-4px] left-0 w-0 h-0.5 bg-green-600 transition-all duration-300 group-hover:w-full"></span>
            </a>
          </li>
        </ul>
      </nav>

      <!-- Contact Button - right aligned -->
      <div class="flex justify-end">
        <a href="/contacto" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-full transition-colors">
          Contáctanos
        </a>
      </div>
    </div>
  </div>
</header>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const header = document.getElementById('header-container');
    const headerTexts = document.querySelectorAll('.header-text');
    const heroHeight = window.innerHeight;

    const updateHeader = () => {
      if (window.scrollY > heroHeight * 0.6) {
        header.classList.add('bg-white');
        header.classList.remove('bg-transparent');
        headerTexts.forEach(el => el.classList.add('text-slate-800', 'filled'));
        headerTexts.forEach(el => el.classList.remove('text-white'));
      } else {
        header.classList.remove('bg-white');
        header.classList.add('bg-transparent');
        headerTexts.forEach(el => el.classList.remove('text-slate-800', 'filled'));
        headerTexts.forEach(el => el.classList.add('text-white'));
      }
    };
    
    updateHeader();
    window.addEventListener('scroll', updateHeader);
  });
</script>